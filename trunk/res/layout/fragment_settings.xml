<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/settings_btnAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/edit_user"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/edit_user"
            android:gravity="start|center_vertical"
            android:padding="10dp"
            android:text="@string/account"
            android:textColor="@color/green" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:drawable/divider_horizontal_bright" />

        <Button
            android:id="@+id/settings_btnNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/world"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/world"
            android:gravity="start|center_vertical"
            android:padding="10dp"
            android:text="@string/notifications"
            android:textColor="@color/green" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:drawable/divider_horizontal_bright" />

        <Button
            android:id="@+id/settings_btnLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/chalk_board"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/chalk_board"
            android:gravity="start|center_vertical"
            android:padding="10dp"
            android:text="@string/language"
            android:textColor="@color/green" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:drawable/divider_horizontal_bright" />

        <Button
            android:id="@+id/settings_btnAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/info"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/info"
            android:gravity="start|center_vertical"
            android:padding="10dp"
            android:text="@string/about"
            android:textColor="@color/green" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:drawable/divider_horizontal_bright" />

        <Button
            android:id="@+id/settings_btnLoginSignup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/key"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/key"
            android:gravity="start|center_vertical"
            android:padding="10dp"
            android:text="@string/loginorsignup"
            android:textColor="@color/green" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:drawable/divider_horizontal_bright" />
    </LinearLayout>

</ScrollView>