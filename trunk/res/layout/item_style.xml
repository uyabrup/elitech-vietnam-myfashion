<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/item_style_layoutMember"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <elitech.vietnam.myfashion.widgets.CircularImageView
            android:id="@+id/item_style_imgAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/ok"
            android:scaleType="centerCrop"
            android:src="@drawable/no_avatar" />

        <TextView
            android:id="@+id/item_style_txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/item_style_imgAvatar"
            android:layout_toRightOf="@+id/item_style_imgAvatar"
            android:textColor="@color/green"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_style_txtDate"
            style="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_style_txtName"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@+id/item_style_imgAvatar"
            android:layout_toRightOf="@+id/item_style_imgAvatar"
            android:textColor="@color/gray"
            android:textSize="12sp" />
    </RelativeLayout>

    <elitech.vietnam.myfashion.widgets.ScaleImageView
        android:id="@+id/item_style_imgPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_style_layoutMember"
        android:adjustViewBounds="true"
        android:contentDescription="@string/ok"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/item_style_btnLike"
        style="?android:attr/textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/item_style_imgPost"
        android:layout_alignRight="@+id/item_style_imgPost"
        android:layout_alignTop="@+id/item_style_imgPost"
        android:layout_margin="5dp"
        android:background="@drawable/bg_button_stylelike"
        android:drawableTop="@drawable/ic_fav_inactive"
        android:gravity="center"
        android:padding="4dp"
        android:textColor="@color/white" />

</RelativeLayout>