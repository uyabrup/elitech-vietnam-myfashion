<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    android:background="#3b3b3b" >

    <LinearLayout
        android:id="@+id/menu_layInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/menu_imgAvatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/ok"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_user" />

        <TextView
            android:id="@+id/menu_txtName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="@string/loginorsignup"
            android:textColor="@color/light_gray"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/menu_btnNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/bg_button_simple"
            android:contentDescription="@string/ok"
            android:padding="5dp"
            android:src="@drawable/world" />
    </LinearLayout>

    <TextView
        android:id="@+id/menu_txtLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_user"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_user"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="@string/loginorsignup"
        android:textColor="@color/light_gray" />

</RelativeLayout>